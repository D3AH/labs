<main class="flex flex-wrap justify-center text-center py-6">
  {{!-- SearchBox --}}
  <div class="w-full mb-6">
    <div class="w-1/2 mx-auto">
      <SearchBox @onResult={{action this.onResult}} @query={{this.search}}/>
    </div>
  </div>
  {{!-- List Rentals --}}
  <div class="w-full h-screen">
    <div class="w-full flex flex-wrap px-6 py-4">
        {{#each this.rentals as |rental|}}
          <div class="w-1/3 p-4 relative">
            <SafeImage
              class="rounded"
              src={{rental.img}}
              alt={{rental.title}} />
            <article class="bg-white rounded shadow-md absolute bottom-0 w-11/12 inset-x-auto ml-10 text-left py-2 px-4">
              <div class="flex">
                <div class="flex-1">
                  <h1 class="font-bold">{{rental.title}}</h1>
                  <p class="text-gray-600">{{rental.description}}</p>
                </div>
                <div class="flex-1 inline-block">
                  <h2 class="font-regular text-gray-500">{{rental.area}} m²</h2>
                  <h2 class="font-regular text-gray-500">{{rental.rooms}} rooms</h2>
                  <h2 class="font-regular text-gray-500">{{rental.bathrooms}} bathrooms</h2>
                </div>
              </div>
              <LinkTo
                class="mx-auto bg-purple-600 hover:bg-purple-800 text-white rounded-full px-4 py-2 float-right my-1"
                @route="rentals.rental"
                @model={{rental.id}}>
                Ver más
              </LinkTo>
            </article>
          </div>
        {{/each}}
    </div>
  </div>
</main>